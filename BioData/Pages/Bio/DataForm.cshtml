@page
@model BioData.Pages.Bio.DataFormModel
@{
}
@section HeadSection {
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<style>
    .select,
    #locale {
        width: 100%;
    }

    .like {
        margin-right: 10px;
    }
</style>

}

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-2.0.3.min.js"></script>
<script type='text/javascript' src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js"></script>
<script src="/lib/jquery-notify/notify.min.js"></script>

<script>

    var appVue = new Vue({
       el: '#formVue',
       data: {
         message: 'Hello Vue!',
         person :{},
         education: [
         {'School':'FS'},
         {'School':'AMA'},
         {'School':'STI'}
             ],
         workhistory: [
         {'School':'FS'},
             ]
       },
       methods:{
           addWorkHistoryLine : function(){
               $.notify("New Work Added.","success");
               this.workhistory.push({});
           }
       }
     })

     function stringifydata()
     {
       $("#pgjson").val(JSON.stringify(appVue._data));
     }

     $(document).ready(function(){
         $(".maskedinput").inputmask();

    });

</script>
}

<div class="row">
    <div id="formVue" class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonId" />
            <input id="pgjson" name="PageJSON" type="hidden" asp-for="PageJSON" />
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tabPersonalDetails-tab" data-toggle="tab" href="#tabPersonalDetails" role="tab" aria-controls="tabPersonalDetails" aria-selected="true">Personal Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tabEducation-tab" data-toggle="tab" href="#tabEducation" role="tab" aria-controls="tabEducation" aria-selected="false">Education</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tabWork-tab" data-toggle="tab" href="#tabWork" role="tab" aria-controls="tabContact" aria-selected="false">Work Details</a>
                </li>
            </ul>
            <div class="tab-content" id="inforTabContent">
                <div class="tab-pane fade show active" id="tabPersonalDetails" role="tabpanel" aria-labelledby="tabPersonalDetails-tab">
                    <h2>Personal Details</h2>
                    <div id="divPersonalDetails" class=" multi-collapse">
                        <partial name="_PersonalDetails" model="new _PersonalDetailsModel()" />
                    </div>
                </div>
                <div class="tab-pane fade" id="tabEducation" role="tabpanel" aria-labelledby="tabEducation-tab">
                    <h2>Education</h2>
                    <div id="divEducation" class="multi-collapse">
                        <partial name="_Education" model="new _EducationModel()" />
                    </div>
                </div>
                <div class="tab-pane fade" id="tabWork" role="tabpanel" aria-labelledby="tabWork-tab">
                    <h2 data-toggle="collapse" data-target="#divWork">Work History</h2>
                    <div id="divWork" class="multi-collapse">
                        <partial name="_Work" model="new _WorkModel()" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



