<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonModel[0].ContactInfo)
            </th>
