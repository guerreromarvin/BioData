<div class="card">
    <div class="container card-body">
        <div class="row">
            <h3>Family Details</h3>
        </div>
        <div class="row">
            <div class="form-group ">
                <label class="control-label">Spouse's Name</label>
                <input class="form-control" type="text" v-model="person.Spouse" placeholder="Spouse's Name" />
            </div>
        </div>
        <div class="row">
            <div class="form-group ">
                <label class="control-label">Father's Name</label>
                <input class="form-control" type="text" v-model="person.FathersName" placeholder="Father's Name" />
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label class="control-label">Mother's Name</label>
                <input class="form-control" type="text" v-model="person.MothersName" placeholder="Mother's Name" />
            </div>
        </div>
        <div>
            <h3>Children</h3>
        </div>
        <div class="alternating card-body" v-for="(child,ndex) in children">
            <div class="row">
                <div class="form-group col-sm">
                    <input class="form-control" type="text" v-model="child.FirstName" placeholder="FirstName" />
                </div>
                <div class="form-group col-sm">
                    <input class="form-control" type="text" v-model="child.LastName" placeholder="LastName" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm">
                    <input class="form-control" type="text" v-model="child.MiddleName" placeholder="MiddleName" />
                </div>
                <div class="form-group col-sm">
                    <input class="form-control" type="date" v-model="child.BirthDate" placeholder="BirthDate" />
                </div>
                <div class="form-group col-sm">
                    <div>
                        <span><input type="radio" v-bind:name="'child_' + ndex + 'gender'" value="male" v-model="child.Gender"> <label>Male</label></span>
                        <span><input type="radio" v-bind:name="'child_' + ndex + 'gender'" value="female" v-model="child.Gender"> <label>Female</label></span>
                    </div>
                </div>
            </div>
            <button class="btn btn-secondary" type="button" v-on:click="deleteEvent(children,ndex)">Remove</button>
            <hr />
        </div>
        <button class="btn" type="button" v-on:click="addChildLine">Add</button>
    </div>
</div>